<div class="loading-wrapper" style="display: none;">
    <div class="loading" >Carregando...</div>
</div>

<script asp-location="Footer">
    $('a').on('click', e => {
        a = $(e.currentTarget);
        if (a.attr('href').includes('#')) return;

        if (a.attr('data-ignore-loading') !== undefined) return;

        if (a.attr('target') !== undefined && a.attr('target').includes('_blank')) return;

        $(".loading-wrapper").removeAttr('style');
    });
</script>