@model IList<ProductOverviewModel>
@if (Model.Any())
{
    <div id="block-recently-viewed-products" class="block block-recently-viewed-products">
        <h2 class="h5 d-block"><strong>@T("Products.RecentlyViewedProducts")</strong></h2>
        <ul class="list viewBox ps-0">
            @for (int i = 0; i < Model.Count; i++)
            {
                var product = Model[i];
                <li @(i == Model.Count - 1 ? @Html.Raw(" class=\"last\"") : @Html.Raw(" class=\"mb-1\""))>
                    <div class="d-flex">
                        @if (!String.IsNullOrEmpty(product.DefaultPictureModel.ImageUrl))
                        {
                            <div class="picture me-2" style="width:64px; height: 64px;">
                                <div class="square-box">
                                    <div class="square-content d-flex justify-content-center align-items-center">
                                        <a href="@Url.RouteUrl("Product", new { SeName=product.SeName })">
                                            <img class="img-fluid product-picture"
                                                 src="@product.DefaultPictureModel.ImageUrl"
                                                 title="@product.DefaultPictureModel.Title"
                                                 alt="@product.DefaultPictureModel.AlternateText" />
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <a class="product-name ps-2" href="@Url.RouteUrl("Product", new { SeName = product.SeName })">@product.Name</a>
                        }
                    </div>
                </li>
            }
        </ul>
    </div>
}