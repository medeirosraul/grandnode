@model FooterCleanModel
<footer class="mt-3">
    <div class="container">
        <div class="row">
            <p class="text-center">
                Precisa de ajuda? WhatsApp: (11) 97491-5290 ou <a href="https://wa.me/5511974915290?text=Oi%2C+tenho+uma+d%C3%BAvida+sobre+como+finalizar+a+compra.&lang=pt_br">clique aqui</a>.
            </p>
        </div>
        <div class="row mb-4">
            <div class="d-flex justify-content-center">
                <div class="container-white">
                    <img src="/Themes/Corujinha/Content/images/banner-safe.png" alt="Métodos de pagamento" class="img-responsive" style="margin: auto; width:100%; max-width:500px" />
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <p class="text-center">
                <span>@Model.CompanyName</span> <br />
                <span>@Model.CompanyAddress</span> <br />
                <span>@Model.CompanyEmail</span>
            </p>
        </div>
        <hr />
        @await Component.InvokeAsync("Widget", new { widgetZone = "before_footerclean" })

        <div class="row">
            <div class="col-12 col-md pb-1 pt-1 flex-column text-lg-left text-center copyright">
                <p>@T("Content.CopyrightNotice", DateTime.Now.Year, Model.StoreName)</p>
            </div>
        </div>
        @await Component.InvokeAsync("Widget", new { widgetZone = "after_footerclean" })
    </div>
</footer>